import java.util.*;
public class Gallery
{
	public static void main(String[] args) 
	{
		// create new Scanner and store in input reference
        Scanner input = new Scanner(System.in);

		System.out.print("How many posters do you want to buy? ");
		// get the next line of input and store in count integer variable
        int count = input.nextInt();
        
		System.out.print("What is the price of each poster? ");
		// get the next line of input and store in price double variable
        double price = input.nextDouble();
		
		// calculate total cost
        double total = count * price;

		System.out.println("Your total purchase is: $" + total);

		// Close the Scanner object
        input.close();
	}
}
